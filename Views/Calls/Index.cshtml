@model IEnumerable<EBOSWebApplication.Models.ViewModel.CallViewModel>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Customer Name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <button class="btn btn-info"><i class="fa fa-search" aria-hidden="true"></i> Search </button>|
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
@if(Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateofCall)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeofCall)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerNo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateofCall)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeofCall)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerNo)

                </td>
                <td>
                <td>
                    <partial name="_RUDButtonsPartial" model="@item.Id">
                        @*<a asp-controller="Calls" asp-action="Index" asp-route-CustomerNo="@item.Id" class="btn btn-outline-secondary btn-sm">Update Calls</a>*@
                </td>
            </tr>
            }

       
           


        </tbody>
    </table>
}
 else
     {
           <div class="text-center text-danger" style="font-size:50px">No Data Found...</div>
     }