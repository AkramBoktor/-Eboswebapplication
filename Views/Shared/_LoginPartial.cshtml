@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
        <li class="nav-item">
            <span class="navbar-text text-dark">Welcome @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Sign Out</button>
            </form>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Identity/Account/Login">Sign in</a>
        </li>
}
</ul>
